<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.travelsky.airportapp.view.ScrollViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#282c36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_flightcontrol"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_flightcontrol_selector"
            android:text="航班管控"
            />


        <RadioButton
            android:id="@+id/rb_flightseat"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_flightseat_selector"
            android:text="机位显示"
            />

        <RadioButton
            android:id="@+id/rb_datastatics"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_datastatics_selector"
            android:text="数据统计"
            />

        <RadioButton
            android:id="@+id/rb_infoplat"
            style="@style/bottm_style"
            android:drawableTop="@drawable/rb_infoplat_selector"
            android:text="信息平台"

            />
    </RadioGroup>

</LinearLayout>